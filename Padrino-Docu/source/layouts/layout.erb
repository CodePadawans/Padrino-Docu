<!doctype html>
<html>
<head>
<meta charset="utf-8">

<!-- Always force latest IE rendering engine or request Chrome Frame -->
<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

<!-- Use title if it's in the page YAML frontmatter -->
<title><%= current_page.data.title || "Padrino-Documantation" %></title>

<%= stylesheet_link_tag "normalize", "all" %>
<%= javascript_include_tag  "all" %>
</head>

<body class="<%= page_classes %>">

<div style="float: left; display: block;">
  <ul id="navlist" style="list-style-type: none">
    <a href="/index.html">Back Home</a><br />
    <% require 'pathname' %>
    <% guides = [] %>
    <% sitemap.resources.each do |r| %>
      <%guides << r if r.ext == ".html"%>
  <% end %>
    <% guides.each do |g| %> 
      <a href="<%= g.url %>"><%= Pathname.new(g.destination_path).basename %></a><br />
  <% end %>
  </ul>
</div>
<div style="float: righ;">  <%= yield %> </div>
</body>
</html>
